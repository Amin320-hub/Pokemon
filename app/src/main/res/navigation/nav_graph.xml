<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.pokemon.ui.login.LoginFragment"
        android:label="Login"
        tools:layout="@layout/activity_login">

        <action
            android:id="@+id/action_login_to_list"
            app:destination="@id/listFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true"/>

        <action
            android:id="@+id/action_login_to_register"
            app:destination="@id/registerFragment" />
    </fragment>

    <fragment
        android:id="@+id/registerFragment"
        android:name="com.example.pokemon.ui.login.RegisterFragment"
        android:label="Registro"
        tools:layout="@layout/fragment_register" />

    <fragment
        android:id="@+id/listFragment"
        android:name="com.example.pokemon.ui.list.ListFragment"
        android:label="Mochila"
        tools:layout="@layout/activity_list">
        <action
            android:id="@+id/action_list_to_search"
            app:destination="@id/searchFragment" />
        <action
            android:id="@+id/action_list_to_detail"
            app:destination="@id/detailFragment" />
    </fragment>

    <fragment
        android:id="@+id/searchFragment"
        android:name="com.example.pokemon.ui.search.SearchFragment"
        android:label="Capturar"
        tools:layout="@layout/activity_search" />

    <fragment
        android:id="@+id/detailFragment"
        android:name="com.example.pokemon.ui.detail.DetailFragment"
        android:label="Detalle"
        tools:layout="@layout/activity_detail">
        <argument
            android:name="pokemonId"
            app:argType="integer" />
        <argument
            android:name="pokemonName"
            app:argType="string" />
    </fragment>

</navigation>